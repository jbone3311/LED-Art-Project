{
  "name": "Turrell Meditation",
  "description": "A 10-minute, thoughtful, meditative sequence inspired by James Turrell. Long fades, gentle breathing, and slow gradients in Turrell-inspired colors.",
  "steps": [
    {
      "effect": "solid",
      "color": [80, 120, 255],
      "duration": 60,
      "transition": "fade",
      "transition_duration": 10
    },
    {
      "effect": "gradient",
      "color_start": [80, 120, 255],
      "color_end": [255, 180, 220],
      "duration": 90,
      "transition": "wave",
      "transition_duration": 12
    },
    {
      "effect": "breathing",
      "base_color": [255, 180, 220],
      "cycle_s": 60,
      "duration": 120,
      "transition": "brightness_sweep",
      "min_b": 8,
      "max_b": 20,
      "transition_duration": 10
    },
    {
      "effect": "solid",
      "color": [255, 90, 40],
      "duration": 60,
      "transition": "middle-out",
      "transition_duration": 8
    },
    {
      "effect": "gradient",
      "color_start": [255, 90, 40],
      "color_end": [120, 255, 180],
      "duration": 90,
      "transition": "patterned_fade",
      "palette": [[255, 90, 40], [255, 180, 220], [120, 255, 180], [80, 120, 255]],
      "step_s": 10,
      "transition_duration": 12
    },
    {
      "effect": "breathing",
      "base_color": [120, 255, 180],
      "cycle_s": 90,
      "duration": 120,
      "transition": "random_shimmer",
      "jitter_pct": 0.03,
      "transition_duration": 10
    },
    {
      "effect": "solid",
      "color": [0, 0, 0],
      "duration": 30,
      "transition": "fade",
      "transition_duration": 10
    }
  ],
  "last": [0, 0, 0]
} 